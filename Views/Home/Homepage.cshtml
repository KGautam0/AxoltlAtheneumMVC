<html lang="en">
@model AxolotlAtheneum.Models.User

<span>.</span>
<body>
    <div class="container">
        <div class="row shelf"> </div>
        <div class="row">

            <div class="col" id="col">
                @if (Model != null)
                {
                    if (Model.status.Equals(AxolotlAtheneum.Models.Status.Inactive))
                    {
                        <h2 class=wood-label>Welcome to Axolotl Atheneum &nbsp; @Html.DisplayFor(Model => Model.firstName) @Html.DisplayFor(Model => Model.lastName) !<br /> You are not verified, click Register to get verified. </h2>
                    }
                    else
                    {
                        <h2 class=wood-label>Welcome to Axolotl Atheneum &nbsp; @Html.DisplayFor(Model => Model.firstName) @Html.DisplayFor(Model => Model.lastName) !</h2>
                    }
                }
                <h2 class=wood-label>Welcome to Axolotl Atheneum!</h2>
                <!-- Carousel -->
                <div class="container" style="margin-top: 50px;">
                    <div class="row featuredBook">
                        <h2><br>Featured Books:</h2>
                        <div class="col">
                            <div class="container">
                                <a href="@Url.Action("Feature1", "Shopping")">
                                    <img src="https://th.bing.com/th/id/R.806fe09d8570529b9f9fdf24f0905893?rik=a4jVscA9ADVM9w&riu=http%3a%2f%2fecx.images-amazon.com%2fimages%2fI%2f51acqoEf5FL._SX258_BO1%2c204%2c203%2c200_.jpg&ehk=iEytyTCWO%2f9v1NDs1vpcygUOrP67lu0VGsYZcWdI%2f0w%3d&risl=&pid=ImgRaw&r=0">
                                </a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="container">
                                <a href="@Url.Action("Feature2", "Shopping")">
                                    <img src="https://i.ebayimg.com/images/g/x~8AAOSwj~hf~dFV/s-l500.jpg">
                                </a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="container">
                                <a href="@Url.Action("Feature3", "Shopping")">
                                    <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fstore.doverpublications.com%2F0486139182.html&psig=AOvVaw3yCkosjThNTG8HIe8vwDiS&ust=1627947784862000&source=images&cd=vfe&ved=0CAsQjRxqFwoTCNCIhfv_kPICFQAAAAAdAAAAABAH">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row shelf"> </div>

                <div class="container">
                    <div class="row featuredAuthor">
                        <h2>Featured Authors:</h2>
                        <div class="col">
                            <div class="container">
                                <h3>Jessie</h3>
                                <img src="@Url.Content("~/Images/Authors/Jessie.jpg")">
                            </div>
                        </div>
                        <div class="col">
                            <div class="container">
                                <h3>Meowth</h3>
                                <img src="@Url.Content("~/Images/Authors/Meowth.jpg")">
                            </div>
                        </div>
                        <div class="col">
                            <div class="container">
                                <h3>James</h3>
                                <img src="@Url.Content("~/Images/Authors/James.jpg")">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row shelf"> </div>

                <h2>Browse Genres:</h2>
                <div class="browseGenres">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <ul>
                                    <li>
                                        <a class="book-genre" href="@Url.Action("Nonfiction", "Shopping")">
                                            <img src="@Url.Content("~/Images/BookSpineG.png")" alt="Nonfiction"
                                                 style="width:10em;">
                                            <div class="centered">Nonfiction</div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="book-genre" href="@Url.Action("Fiction", "Shopping")">
                                            <img src="@Url.Content("~/Images/BookSpineB.png")" alt="Fiction"
                                                 style="width:10em;">
                                            <div class="centered">Fiction</div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col">
                                <ul>
                                    <li>
                                        <a class="book-genre" href="@Url.Action("Classics", "Shopping")">
                                            <img src="@Url.Content("~/Images/BookSpineP.png")" alt="Classics"
                                                 style="width:10em;">
                                            <div class="centered">Classics</div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="book-genre" href="@Url.Action("Poems", "Shopping")">
                                            <img src="@Url.Content("~/Images/BookSpineO.png")" alt="Poems" style="width:10em;">
                                            <div class="centered">Poems</div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col">
                                <ul>
                                    <li>
                                        <a class="book-genre" href="@Url.Action("Historical", "Shopping")">
                                            <img src="@Url.Content("~/Images/BookSpineB.png")" alt="Historical"
                                                 style="width:10em; height:auto">
                                            <div class="centered">Historical</div>
                                        </a>
                                    <li>
                                        <a class="book-genre" href="@Url.Action("Romance", "Shopping")">
                                            <img src="@Url.Content("~/Images/BookSpineR.png")" alt="Romance"
                                                 style="width:10em;">
                                            <div class="centered">Romance</div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
<!-- Footer -->
<footer class="p-2 position-relative container-md wood-label">
    <p>Axolotl Atheneum &copy; 2021 </p>
</footer>
</html>