@model AxolotlAtheneum.Models.User

<main>
    <div class="container-md">
        <div class="row shelf"> </div>
        <div class="row">
            <div class="col">
                <div class="container">
                    @{ Html.RenderAction("CheckoutItems"); }

                    <script src="../js/payment-JS.js"></script>

                    @if (Model.address != null)
                    {
                        <h4>Address on File</h4>

                        <p>Street: @Html.DisplayFor(m => m.address.Street)</p>
                        <p>@Html.DisplayFor(m => m.address.Street2)</p>
                        <p>City: @Html.DisplayFor(m => m.address.City)</p>
                        <p>State: @Html.DisplayFor(m => m.address.State.ToString())</p>
                        <p>Zip code: @Html.DisplayFor(m => m.address.Zip)</p>
                    }
                    else
                    {
                        <fieldset class="edit_address">
                            <h3>No Shipping Address on File</h3>
                            <p>Please enter your new address information:</p>
                            <p>Each Entry must be less than 100 characters</p>
                            @{Html.RenderAction("rendereditAddress", "Account", Model.address);}
                        </fieldset>
                    }

                    @if (Model.card0 != null)
                    {
                        <p>Credit Card: @Html.DisplayFor(m => m.card0.cardNumber)</p>
                    }
                    else
                    {
                        <fieldset class="edit_payment">
                            <h3>No Payment Card on File</h3>
                            <p>Please enter your card information:</p>
                            @{Html.RenderAction("rendereditCard", "Account", Model.card0);}
                        </fieldset>
                    }



                </div>
            </div>
        </div>
    </div>
</main>