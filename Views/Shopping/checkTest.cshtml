@model AxolotlAtheneum.Models.ShoppingCart

@{
    ViewBag.Title = "View";
}

<h2>View</h2>
<div id="div1" style="height:288px; overflow:auto;">
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Cover
        </th>
        <th>
            Author
        </th>
        <th>
            Individual Price
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @item.Key.Title
            </td>
            <td>
                <img src="@Url.Content(@item.Key.CoverPictureURL)" width="10%" length="10%">
            </td>
            <td>
                @item.Key.Author
            </td>
            <td>
                @item.Key.SellingPrice
            </td>
        </tr>
    }

</table>





 </div>